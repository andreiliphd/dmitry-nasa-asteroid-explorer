<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="asteroid"
            type="com.udacity.asteroidradar.database.Asteroid" />

        <variable
            name="clickListener"
            type="com.udacity.asteroidradar.main.AsteroidsListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:onClick="@{() -> clickListener.onClick(asteroid)}">

        <ImageView
                android:id="@+id/smile"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@drawable/ic_status_potentially_hazardous"
                app:srcCompat="@drawable/ic_status_potentially_hazardous"
                app:isPotentiallyHazardous="@{asteroid}"
                app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
                android:id="@+id/codename"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/default_text_color"
                android:inputType="textMultiLine"
                app:closeApproachDate="@{asteroid}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/smile"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="24dp" />

        <TextView
                android:text="Sample Test for Testing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/closeApproachDate"
                app:codename="@{asteroid}"
                app:layout_constraintBottom_toTopOf="@+id/codename"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/codename"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/default_text_color"
                app:layout_constraintStart_toStartOf="@+id/codename"
                app:layout_constraintHorizontal_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>